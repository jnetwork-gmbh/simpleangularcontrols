{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2020", "dom"],
    "module": "es2020",
    "baseUrl": "./",
    "paths": {
      "@jnetwork/jngcontrols-common": ["dist/sac-common"],
      "@jnetwork/jngcontrols-bootstrap4": ["dist/sac-bootstrap4"],
      "@jnetwork/jngcontrols-bootstrap3": ["dist/sac-bootstrap3"]
    }
  },
  "angularCompilerOptions": {
    "compilationMode": "partial",
    "allowEmptyCodegenFiles": true,
  }
}
